{
    // Path Intellisense 可以代替 vscode 默认的路径自动填充
    // 如果要开启 TypeScript Vue Plugin (Volar) 的 Takeover 模式
    // 就需要关闭内置的 TypeScript and JavaScript Language Features
    // 此时这两个配置失效
    "typescript.suggest.paths": false,
    "javascript.suggest.paths": false,
    // 要在保存时运行的代码操作种类
    "editor.codeActionsOnSave": {
        // 控制是否应在文件保存时运行 eslint 自动修复操作
        "source.fixAll.eslint": true
    },
    // 关闭在保存时格式化文件，防止和上面 eslint 的自动修复操作重复
    "editor.formatOnSave": false
}